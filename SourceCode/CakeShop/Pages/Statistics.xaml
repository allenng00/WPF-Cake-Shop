<Page x:Class="CakeShop.Pages.Statistics"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:lvc="clr-namespace:LiveCharts.Wpf;assembly=LiveCharts.Wpf"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:CakeShop.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="880" d:DesignWidth="1400"
      Loaded="Page_Loaded">
  
    <Grid x:Name="mainGrid"
        Background="LightCyan">
        <Grid.RowDefinitions>
            <RowDefinition Height="100"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
        </Grid.RowDefinitions>
        <Grid Grid.Row="0">
            <StackPanel 
                HorizontalAlignment="Center" VerticalAlignment="Center">
                <Label Name="tabHeaderLabel" 
                       FontFamily="Yu Gothic UI Semibold" FontSize="40" FontWeight="Bold"
                       Content="THỐNG KÊ DOANH THU"/>

            </StackPanel>
                
        </Grid>
        <Grid Grid.Row="1">
            <lvc:CartesianChart Name="Chart01"></lvc:CartesianChart>
        </Grid>
    </Grid>
</Page>
